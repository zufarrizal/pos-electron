{
  "name": "pos-electron",
  "version": "1.0.0",
  "description": "Aplikasi POS/Kasir berbasis Electron dan SQLite",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "npm run rebuild",
    "dist": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "sqlite",
    "pos",
    "kasir"
  ],
  "author": "Admin",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "electron": "40.4.1",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.poskasir.electron",
    "productName": "POS Kasir",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "POS-Kasir-Setup-${version}.${ext}"
    }
  }
}
